<h1>Directer #<%= @dir_data.id%> details</h1>

<a href="/directors">Go Back</a>

<hr>


<dl>
  <dt> Name </dt>
  <dd> <%=@dir_data.name%> </dd>

  <dt> Dob </dt>
  <dd> <%=@dir_data.dob%> </dd>
  
  <dt> Bio </dt>
  <dd> <%=@dir_data.bio%> </dd>

  <dt> Image </dt>
  <dd> <img src ="http://robohash.org/<%= @dir_data.name %>"> </dd>

  <dt> Created at </dt>
  <dd> <%=@dir_data.created_at%> </dd>

  <dt> Updated at </dt>
  <dd> <%=@dir_data.updated_at%> </dd>

</dl>

<hr>
<h2>Filmography</h2>

<table border="1">
<% @list_of_movies.each do |blah| %>
  <tr>
    <td><%= blah.id %> </td>
    <td> <img src ="http://robohash.org/<%= blah.title %>"> </td>
    <td><%= blah.title %> </td>
    <td><%= blah.year %> </td>
    <td><%= @dir_data.name%> </td>
    <td> <a href="/movies/<%= blah.id%>">Show Details</a>   </td>
  </tr>
<% end %>