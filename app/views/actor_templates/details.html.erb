<h1>Actor #<%= @actor.id%> details</h1>

<a href="/actors">Go Back</a>

<hr>

<dl>
  <dt> Name </dt>
  <dd> <%=@actor.name%> </dd>

  <dt> Dob </dt>
  <dd> <%=@actor.dob%> </dd>

  <dt> Bio </dt>
  <dd> <%=@actor.bio%> </dd>
  
  <dt> Image </dt>
  <dd> <img src ="http://robohash.org/<%= @actor.name %>"> </dd>

  <dt> Created at </dt>
  <dd> <%=@actor.created_at%> </dd>

  <dt> Updated at </dt>
  <dd> <%=@actor.updated_at%> </dd>

</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
<% @list_of_movies.each do |blah| %>
  <tr>
    <td><%= blah.id %> </td>
    <td> <img src ="http://robohash.org/<%= blah.title %>"> </td>
    <td><%= blah.title %> </td>
    <td><%= blah.year %> </td>
    <td><%= @dir_data.name%> </td>
    <td> <a href="/movies/<%= blah.id%>">Show Details</a>   </td>
  </tr>
<% end %>